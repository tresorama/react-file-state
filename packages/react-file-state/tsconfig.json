{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext"
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS",
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./src/**/*.stories.tsx",
    "src/**/*.test.ts"
  ]
}